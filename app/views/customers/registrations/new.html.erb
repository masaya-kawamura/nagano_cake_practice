<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="form_group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label">名前</label>
    <%= f.label :last_name, '(姓)' %>
    <%= f.text_field :last_name, autocomplete: 'first_name' %>
    <%= f.label :first_name, '(名)' %>
    <%= f.text_field :first_name, autocomplete: 'last_name' %>
  </div>

  <div class="form_group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label">フリガナ</label>
    <%= f.label :last_name_kana, '(セイ)' %>
    <%= f.text_field :last_name_kana, autocomplete: 'first_name_kana' %>
    <%= f.label :first_name_kana, '(メイ)' %>
    <%= f.text_field :first_name_kana, autocomplete: 'last_name_kana' %>
  </div>

  <div class="form-group row">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="form_group row">
    <%= f.label :postcode, '郵便番号（ハイフンなし)' %>
    <%= f.text_field :postcode, autocomplete: 'postcode' %>
  </div>

  <div class="form_group row">
    <%= f.label :phone_number, '電話番号(ハイフンなし)' %>
    <%= f.text_field :phone_number, autocomplete: 'phone_number' %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード（6文字以上)' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード(確認用)' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.submit "新規登録", class:'btn btn-success' %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
