<div class="container">
  <div class="row">
    <h6>登録情報</h6>
    <%= link_to '編集', edit_customer_path(current_customer), class:"btn btn-success" %>
  </div>
</div>


<table class="table table-bordered">
  <tr>
    <th>氏名</th>
    <td><%= @customer.last_name + " " + @customer.first_name %></td>
  </tr>
  <tr>
    <th>カナ</th>
    <td><%= @customer.last_name_kana + " " + @customer.first_name_kana %></td>

  </tr>
  <tr>
    <th class="table-active">郵便番号</th>
    <td><%= @customer.postcode %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.phone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>

<h4>配送先</h4>
<%= link_to '一覧を見る', class: "btn btn-success" %>
<h4>注文履歴</h4>
<%= link_to '一覧を見る', class: "btn btn-primary" %>
